        <menuitem id="zotero-itemmenu-syncpdftools-rebaseatt" label="&zotero.syncpdftools.rebaseAttachment.label;" oncommand="Zotero.SyncPDFTools.rebaseSelectedAttachments()"/>
    </popup>
