<overlay id="syncpdftools" 
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <script type="application/x-javascript" src="chrome://syncpdftools/content/scripts/syncpdftools.js"/>


    <popup id="zotero-itemmenu">
